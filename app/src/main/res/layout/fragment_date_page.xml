<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingLeft="@dimen/thirtytwo"
    android:paddingRight="@dimen/thirtytwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.parent.DatePageFragment">

    <TextView
        android:id="@+id/dateText"
        style="@style/BigBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tool:layout_constraintEnd_toEndOf="parent"
        tool:layout_constraintStart_toStartOf="parent"
        tool:layout_constraintTop_toTopOf="parent"
        tools:text="Date" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/blocks_list"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/thirtytwo"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tool:layout_constraintBottom_toBottomOf="parent"
        tool:layout_constraintTop_toBottomOf="@+id/dateText"
        tools:listitem="@layout/item_block"
        android:layout_height="0dp"
        android:layout_width="match_parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>